<%include header%>

<div class="body-content outer-top-xs" id="top-banner-and-menu">
  <div class="container">
    <div class="row">
        <div class="col-md-12 phantrang text-left pb-3">
            <ul>
                <li><a href="">Trang chủ</a> / </li>
                <li>Đăng ký tài khoản</li>
            </ul>
        </div>
        <div class="col-lg-8 justify-content-lg-center mx-auto background-register">
            <div class="col-lg-6">
                <div class="background-image-register" style="height: 565px">
                    <img src="/images/background/dangky-dangnhap1.png" />
                    <div class="register-detail">
                        <div class="register-detail-1">QUYỀN LỢI KHÁCH HÀNG</div>
                        <div class="register-detail-2">
                            <i class="far fa-check-circle" style="color: #3b69f1;"></i> Có nhiều sản phẩm uy tín và chất lượng.
                        </div>
                        <div class="register-detail-2">
                            <i class="far fa-check-circle" style="color: #3b69f1;"></i> Mua hàng khắp thế giới cực dễ dàng, nhanh chóng.
                        </div>
                        <div class="register-detail-2">
                            <i class="far fa-check-circle" style="color: #3b69f1;"></i> Theo dõi chi tiết đơn hàng, địa chỉ thanh toán dễ dàng
                        </div>
                    </div>
                </div>
            </div>
            <form action="/users/registerAccount" method="POST">
              <div class="col-lg-6">
                <div class="register-information">
                    <div class="register-title">
                        <div class="col-md-6 line pt-3"><a href="/users/login">Đăng nhập</a></div>
                        <div class="col-md-6"><a href="/users/register" class="display-line">Đăng ký</a></div>
                    </div>
                    <div class="register-form">
                        <!-- <div class="register-email"> -->
                            <span class="text-success"><%= success%></span>
                            <span class="text-danger"><%= error%></span>
                        <!-- </div> -->
                        <div class="register-email">
                            <div>Tên đăng nhập <span style="color: red">*</span></div>
                            <input type="text" class="input-register" name="name" placeholder="Nhập tên đăng nhập" required/>
                        </div>
                        <div class="register-email">
                            <div>Email <span style="color: red">*</span></div>
                            <input type="email" class="input-register" name="email" id="email" placeholder="Nhập địa chỉ email" required/>
                        </div>
                        <div id="error_register_email"></div>
                        <div class="register-email">
                            <div>Số điện thoại <span style="color: red">*</span></div>
                            <input type="tel" class="input-register" name="phone" id="sodt" pattern="[0-9]{10}" placeholder="Nhập số điện thoại" required/>
                        </div>
                        <div id="error_login_phone"></div>
                        <div class="register-password">
                            <div>Mật khẩu <span style="color: red">*</span></div>
                            <input type="password" class="input-register" name="password" id="matkhau" placeholder="Nhập mật khẩu" required/>
                        </div>
                        <div id="error_login_password"></div>
                        <div class="register-password">
                            <div>Nhập lại mật khẩu <span style="color: red">*</span></div>
                            <input type="password" class="input-register" name="repeatPassword" id="repeatmk" placeholder="Nhập lại mật khẩu" required/>
                        </div>
                        <div id="error_register_password"></div>
                        <div class="register-button py-5">
                            <button type="submit" class="btn btn-primary" id="register">Tạo tài khoản</button>
                        </div>
                    </div>
                </div>
              </div>
            </form>
        </div>
    </div>
  </div>
</div>

<% include footer %>