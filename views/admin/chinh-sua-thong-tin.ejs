<% include header %>
	<div class="pcoded-main-container">
		<div class="pcoded-wrapper">
			<div class="pcoded-content">
				<div class="pcoded-inner-content">
					<div class="main-body">
						<div class="page-wrapper">
                            <div class="page-header-title">
								<div class="row align-items-center">
									<div class="col-md-5 header-title">
										<h4>Chỉnh sửa thông tin cá nhân</h4>
									</div>
									<div class="col-md-7 text-right">
										<ul class="breadcrumb">
											<li class="breadcrumb-item"><a href="/portal"><i class="fa fa-home" aria-hidden="true"></i></a></li>
											<li class="breadcrumb-item">Chỉnh sửa thông tin cá nhân</li>
										</ul>
									</div>
								</div>
							</div>
						
							<div class="content-block">
                                <form action="/portal/users/updateProfile" method="post">
                                    <div class="row">
                                        <div class="col-md-4 pt-3">
                                            <label class="font-weight-bold">Tên tài khoản</label>
                                            <input type="text" class="type-input" name="" value="<%= inforUser.username%>" readonly/>
                                        </div>
                                        <div class="col-md-4 pt-3">
                                            <label class="font-weight-bold">Họ tên <span class="text-danger">*</span></label>
                                            <input type="text" class="type-input" name="name" value="<%= inforUser.name%>" placeholder="Nhập tên tài khoản..." required/>
                                        </div>
                                        <div class="col-md-4 pt-3">
                                            <label class="font-weight-bold">Email <span class="text-danger">*</span></label>
                                            <input type="text" class="type-input" name="email" value="<%= inforUser.email%>" placeholder="Nhập email..." required/>
                                        </div>
                                        <div class="col-md-4 pt-3">
                                            <label class="font-weight-bold">Số điện thoại <span class="text-danger">*</span></label>
                                            <input type="text" class="type-input" name="phone" value="<%= inforUser.phone%>" placeholder="Nhập SĐT..." required/>
                                        </div>
                                        <div class="col-md-4 pt-3">
                                            <label><b>Giới tính:</b> <%= inforUser.gender%></label>
                                            <select class="type-select" name="gender" required>
                                                <option value="Nam">Nam</option>
                                                <option value="Nữ">Nữ</option>
                                                <option value="Khác">Khác</option>
                                            </select>
                                        </div>
                                        <div class="col-md-4 pt-3">
                                            <label class="font-weight-bold">Địa chỉ</label>
                                            <input type="text" class="type-input" name="address" value="<%= inforUser.address%>" placeholder="Nhập địa chỉ..." required/>
                                        </div>
                                        <!-- <div class="col-md-4 pt-3">
                                            <label class="font-weight-bold">Ảnh đại diện</label>
                                            <input type="file" class="type-input" name=""/>
                                        </div> -->
                                        <div class="col-md-12 py-3 text-center">
                                            <button type="submit" class="btn btn-info"><i class="far fa-save"></i> Lưu lại</button>
                                            <button type="reset" class="btn btn-danger"><i class="far fa-trash-alt"></i> Hủy bỏ</button>
                                        </div>
                                    </div>
                                </form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
<% include footer %>
