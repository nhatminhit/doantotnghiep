<%include header %>
	
	<div class="pcoded-main-container">
		<div class="pcoded-wrapper">
			<div class="pcoded-content">
				<div class="pcoded-inner-content">
					<div class="main-body">
						<div class="page-wrapper">
							<div class="page-header-title">
								<div class="row align-items-center">
									<div class="col-md-5 header-title">
										<h4>Thêm mới đơn hàng</h4>
									</div>
									<div class="col-md-7 text-right">
										<ul class="breadcrumb">
											<li class="breadcrumb-item"><a href="/portal"><i class="fa fa-home" aria-hidden="true"></i></a></li>
											<li class="breadcrumb-item"><a href="/portal/order/list">Danh sách đơn hàng</a></li>
											<li class="breadcrumb-item">Thêm mới đơn hàng</li>
										</ul>
									</div>
								</div>
							</div>
						
							<div class="content-block">
                                <form action="/portal/order/add" method="post">
								<div class="row">
									<div class="col-md-12 information-customer">
										Thông tin khách hàng
									</div>
									<div class="col-md-4">
										<label class="font-weight-bold">Họ tên khách hàng <span class="text-danger">*</span></label>
                                        <input type="text" class="type-input" name="nameCustomer" placeholder="Nhập họ tên khách hàng" required/>
									</div>
                                    <div class="col-md-4">
										<label class="font-weight-bold">Email</label>
                                        <input type="text" class="type-input" name="email" placeholder="Nhập email"/>
									</div>
                                    <div class="col-md-4">
										<label class="font-weight-bold">Số điện thoại <span class="text-danger">*</span></label>
                                        <input type="text" class="type-input" name="phone" placeholder="Nhập số điện thoại" required/>
									</div>
                                    <div class="col-md-4 pt-3">
										<label class="font-weight-bold">Giới tính</label>
                                        <select class="type-select" name="gender">
                                            <option value="Nam">Nam</option>
                                            <option value="Nữ">Nữ</option>
                                            <option value="Khác">Khác</option>
                                        </select>
									</div>
                                    <div class="col-md-8 pt-3">
										<label class="font-weight-bold">Địa chỉ</label>
                                        <input type="text" class="type-input" name="address" placeholder="Nhập địa chỉ"/>
									</div>
									<div class="col-md-12 information-customer pt-3">
										Thông tin người bán
									</div>
									<div class="col-md-3">
										<label class="font-weight-bold">Mã người bán <span class="text-danger">*</span></label>
										<input type="text" class="type-input" name="idEmployee" value="<%= user.id%>" readonly/>
									</div>
									<div class="col-md-3">
										<label class="font-weight-bold">Họ tên người bán <span class="text-danger">*</span></label>
										<input type="text" class="type-input" name="nameEmployee" value="<%= user.name%>" readonly/>
									</div>
									<div class="col-md-3">
										<label class="font-weight-bold">Ngày tạo đơn hàng <span class="text-danger">*</span></label>
										<input type="text" class="type-input" name="dateCreate" value="<%= dateCreate%>" readonly/>
									</div>
									<div class="col-md-3">
										<label class="font-weight-bold">Hình thức thanh toán <span class="text-danger">*</span></label>
										<select name="payments" class="type-select">
											<option value="cash">Tiền mặt</option>
											<option value="VNPAY">VNPay</option>
											<option value="bank">Chuyển khoản ngân hàng</option>
										</select>
									</div>
									<div class="col-md-12 information-customer pt-3">
										Thông tin sản phẩm
									</div>
									<div class="col-md-12 text-right">
										<span class="btn btn-info add"><i class="fa fa-plus"> Thêm sản phẩm</i></span>
										<div class="group-product">
											<div class="group-product-child">
												<input type="text" name="idProduct" class="type-input" placeholder="Nhập tên sản phẩm" required>
												<input type="number" name="quantity" min="1" value="1" class="type-input" placeholder="Nhập số lượng" required>
												<span class="btn btn-warning" style="line-height: 28px;"><i class="far fa-star"></i></span>
											</div>
										</div>
									</div>
                                    <div class="col-md-12 py-3 text-center">
                                        <button type="submit" class="btn btn-info"><i class="far fa-save"></i> Lưu lại</button>
                                        <button type="reset" class="btn btn-danger"><i class="far fa-trash-alt"></i> Hủy bỏ</button>
										<a href="/portal/order/list" class="btn btn-warning"><i class="fas fa-reply"></i> Trở về</a>
									</div>
								</div>
                                </form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
<%include footer%>