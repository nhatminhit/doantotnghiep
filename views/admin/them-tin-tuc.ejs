<%include header%>
	
	<div class="pcoded-main-container">
		<div class="pcoded-wrapper">
			<div class="pcoded-content">
				<div class="pcoded-inner-content">
					<div class="main-body">
						<div class="page-wrapper">
							<div class="page-header-title">
								<div class="row align-items-center">
									<div class="col-md-5 header-title">
										<h4>Thêm mới tin tức</h4>
									</div>
									<div class="col-md-7 text-right">
										<ul class="breadcrumb">
											<li class="breadcrumb-item"><a href="/portal"><i class="fa fa-home" aria-hidden="true"></i></a></li>
											<li class="breadcrumb-item"><a href="/portal/news/list">Danh sách tin tức</a></li>
											<li class="breadcrumb-item">Thêm mới tin tức</li>
										</ul>
									</div>
								</div>
							</div>
						
							<div class="content-block">
                                <form action="/portal/news/add" method="post" enctype="multipart/form-data">
									<div class="row">
										<div class="col-md-12 font-italic">
											(<span class="text-danger">*</span>) Bắt buộc phải điền đầy đủ thông tin tin tức.
										</div>
										<div class="col-md-12 pt-3">
											<label class="font-weight-bold">Tiêu đề tin tức <span class="text-danger">*</span></label>
											<input type="text" class="type-input" name="title" placeholder="Nhập tiêu đề tin tức..." required/>
										</div>
										<div class="col-md-3 pt-3">
											<label class="font-weight-bold">Người viết <span class="text-danger">*</span></label>
											<input type="text" class="type-input" name="creator" value="<%= user.name%>" required/>
										</div>
										<div class="col-md-3 pt-3">
											<label class="font-weight-bold">Loại tin tức</label>
											<select name="type" class="type-select">
												<option value="0">Chọn loại tin tức</option>
												<option value="news">Tin mới nhất</option>
												<option value="hot">Tin nóng nhất</option>
											</select>
										</div>
										<div class="col-md-6 pt-3">
											<label class="font-weight-bold">Hình ảnh <span class="text-danger">*</span></label>
											<input type="file" class="type-input" name="file" required/>
										</div>
										<div class="col-md-12 pt-3">
											<label class="font-weight-bold">Nội dung tin tức <span class="text-danger">*</span></label>
											<textarea class="type-input" name="content" id="editor1" placeholder="Nhập nội dung tin tức..."></textarea>
										</div>
										<div class="col-md-12 pt-3">
											<label class="font-weight-bold">Mô tả <span class="text-danger">*</span></label>
											<input type="text" class="type-input" name="description" placeholder="Nhập mô tả..." required/>
										</div>
										<div class="col-md-12 py-3 text-center">
											<button type="submit" class="btn btn-info"><i class="far fa-save"></i> Lưu lại</button>
											<button type="reset" class="btn btn-danger"><i class="far fa-trash-alt"></i> Hủy bỏ</button>
											<a href="/portal/news/list" class="btn btn-warning"><i class="fas fa-reply"></i> Trở về</a>
										</div>
									</div>
                                </form>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	
<%include footer%>